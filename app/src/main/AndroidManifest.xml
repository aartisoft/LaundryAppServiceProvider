<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartloan.smtrick.laundryapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.smartloan.smtrick.laundryapp.Update_Relative_Activity"></activity>
        <activity
            android:name="com.smartloan.smtrick.laundryapp.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartloan.smtrick.laundryapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.SignupActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.Recyclerfragment"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.LoginActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.smartloan.smtrick.laundryapp.ShowImagesActivity" />
        <activity android:name="com.smartloan.smtrick.laundryapp.SubCatalogActivity" />
        <activity android:name="com.smartloan.smtrick.laundryapp.UserDetailsActivity" />
        <activity android:name="com.smartloan.smtrick.laundryapp.Add_Updatelead__bankresult_Activity" />
        <activity android:name="com.smartloan.smtrick.laundryapp.View_Member_Report_Activity" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.sharedtransitionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name="com.smartloan.smtrick.laundryapp.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.smartloan.smtrick.laundryapp.ImagePickerActivity"
            android:label="Pick Image" />
        <activity
            android:name="com.smartloan.smtrick.laundryapp.CropImageActivity"
            android:label="Crop Image" />
        <activity android:name="com.smartloan.smtrick.laundryapp.dummyActivity" />
    </application>

</manifest>